<assembly>

	<!-- note: first file set takes precedence (will not be overwritten) -->

	<id>assembly</id>

	<formats>

		<!-- make archive -->
		<format>tar.gz</format>

		<!-- make expoded folder -->
		<format>dir</format>

	</formats>

	<fileSets>

		<!-- config files -->
		<fileSet>
			<directory>target/classes/etc</directory>
			<outputDirectory>/etc</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0644</fileMode>
		</fileSet>

		<!-- feature based dependency files -->
		<fileSet>
			<directory>${maker.features}</directory>
			<outputDirectory>/system</outputDirectory>
		</fileSet>

		<!-- extracted karaf distribution -->
		<fileSet>
			<directory>${karaf.platform}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>

				<exclude>bin/**</exclude>

				<exclude>**/demos/**</exclude>
				<exclude>LICENSE</exclude>
				<exclude>NOTICE</exclude>
				<exclude>README</exclude>
				<exclude>RELEASE-NOTES</exclude>
				<exclude>karaf-manual*.*</exclude>

			</excludes>
		</fileSet>

		<!-- bin/* separately to get the correct file mode -->
		<fileSet>
			<directory>${karaf.platform}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bin/**</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

	</fileSets>

</assembly>
