<assembly>

	<!-- note: first file set takes precedence (will not be overwritten) -->

	<id>assembly</id>

	<formats>
		<!-- <format>zip</format> -->
		<format>dir</format>
	</formats>

	<baseDirectory>${karaf.assembly.baseDirectory}</baseDirectory>

	<fileSets>

		<fileSet>
			<directory>target/classes/etc</directory>
			<outputDirectory>/etc</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0644</fileMode>
		</fileSet>

		<!-- non feature dependency files -->
		<fileSet>
			<directory>target/dependency</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/lib/</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>${karaf.unpack.features}</directory>
			<outputDirectory>/system</outputDirectory>
		</fileSet>

		<!-- expanded karaf distribution -->
		<fileSet>
			<directory>${karaf.original.platform}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>

				<exclude>bin/**</exclude>

				<exclude>**/demos/**</exclude>
				<exclude>LICENSE</exclude>
				<exclude>NOTICE</exclude>
				<exclude>README</exclude>
				<exclude>RELEASE-NOTES</exclude>
				<exclude>karaf-manual*.*</exclude>

			</excludes>
		</fileSet>

		<!-- bin/* separately to get the correct file mode -->
		<fileSet>
			<directory>${karaf.original.platform}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bin/**</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

	</fileSets>

</assembly>
